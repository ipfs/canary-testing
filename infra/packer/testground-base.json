{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "destination_regions": "eu-central-1,us-west-2"
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-west-2",
    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "name": "ubuntu/images/hvm-ssd/ubuntu-bionic-18.04-amd64-server-20191002",
        "root-device-type": "ebs"
      },
      "owners": ["099720109477"],
      "most_recent": true
    },
    "ami_regions": "{{user `destination_regions`}}",
    "instance_type": "t2.micro",
    "ssh_username": "ubuntu",
    "ami_name": "testground-base {{timestamp}}",
    "tags": {
      "Name": "tg-base-v2-dev"
    }
  }],
  "provisioners": [
    {
      "type": "file",
      "source": "tweak-ansible.sh",
      "destination": "/tmp/tweak-ansible.sh"
    },
    {
      "type": "file",
      "source": "testground-setup-worker.service",
      "destination": "/tmp/testground-setup-worker.service"
    },
    {
      "type": "shell",
      "inline": [
        "sleep 30",
        "sudo apt-get update",
        "sudo apt-get install -y redis-server",
        "sudo systemctl disable redis-server",
        "sudo apt-get install -y apache2",
        "sudo systemctl disable apache2",
        "sudo apt-get install -y build-essential",
        "wget https://dl.google.com/go/go1.13.1.linux-amd64.tar.gz",
        "sudo tar -C /usr/local -xzf go1.13.1.linux-amd64.tar.gz",
        "rm go1.13.1.linux-amd64.tar.gz",
        "echo 'export PATH=$PATH:/usr/local/go/bin' | sudo tee -a /etc/profile",
        "sudo apt-get install -y apt-transport-https gnupg-agent",
        "curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo apt-key add -",
        "sudo add-apt-repository \"deb [arch=amd64] https://download.docker.com/linux/ubuntu $(lsb_release -cs) stable\"",
        "sudo apt-get update",
        "sudo apt-get install -y docker-ce docker-ce-cli containerd.io",
        "sudo usermod -aG docker ubuntu",
        "wget -qO - https://artifacts.elastic.co/GPG-KEY-elasticsearch | sudo apt-key add -",
        "echo 'deb https://artifacts.elastic.co/packages/7.x/apt stable main' | sudo tee -a /etc/apt/sources.list.d/elastic-7.x.list",
        "sudo apt-get update",
        "sudo apt-get install -y filebeat",
        "sudo update-rc.d filebeat defaults 95 10",
        "sudo apt-add-repository --yes --update ppa:ansible/ansible",
        "sudo apt-get install -y ansible python3-pip python-pip",
        "sudo bash /tmp/tweak-ansible.sh",
        "sudo pip install boto boto3 botocore docker",
        "sudo pip3 install boto boto3 botocore docker",
        "sudo pip3 install awscli",
        "sudo snap install ripgrep --classic",
        "sudo apt-get install -y jq",
        "sudo apt-get install -y nload",
        "sudo apt-get install -y mosh",
        "git clone https://github.com/ipfs/testground.git",
        "cp -a testground testground-aws-setup",
        "cd testground-aws-setup; git checkout infra/auto-worker-setup; cd ..",
        "sudo systemctl start docker",
        "sudo docker pull redis",
        "sudo docker pull golang:1.13-buster",
        "sudo docker pull busybox:1.31.0-glibc",
        "sudo docker pull debian",
        "sudo chown -R ubuntu. .",
        "bash -l -c 'cd testground && go build'",
        "ansible-galaxy install geerlingguy.apache",
        "sudo cp /tmp/testground-setup-worker.service /lib/systemd/system",
        "sudo chmod +x /lib/systemd/system/testground-setup-worker.service",
        "sudo sudo systemctl enable testground-setup-worker"
      ]
    }
  ]
}
